<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.FormProductActivity">

        <EditText
            android:id="@+id/et_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Nome"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/et_nome"
            app:layout_constraintTop_toBottomOf="@id/et_nome"
            app:layout_constraintEnd_toEndOf="@id/et_nome"
            android:hint="Descrição" />

        <EditText
            android:id="@+id/et_preco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/et_nome"
            app:layout_constraintTop_toBottomOf="@id/et_descricao"
            app:layout_constraintEnd_toEndOf="@id/et_nome"
            android:hint="Preço"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_preco"
            app:layout_constraintVertical_bias="1"
            android:layout_margin="16dp"
            android:text="SALVAR"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
